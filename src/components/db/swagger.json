{
    "openapi": "3.0.0",
    "info": {
      "title": "API de Gestão de Cargas",
      "description": "Uma API para gerenciar cargas e usuários",
      "version": "1.0.0"
    },
    "servers": [
      {
        "url": "http://localhost:3031",
        "description": "Servidor de Desenvolvimento"
      }
    ],
    "paths": {
      "/cargas": {
        "get": {
          "summary": "Obter todas as cargas",
          "responses": {
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                  "example": "[{ \"ID\": 1, \"nome\": \"Carga 1\", \"peso\": 100, \"valor\": 200, \"distancia\": 50, \"descricao\": \"Descrição da carga 1\", \"status\": \"Pendente\" }, { \"ID\": 2, \"nome\": \"Carga 2\", \"peso\": 150, \"valor\": 250, \"distancia\": 70, \"descricao\": \"Descrição da carga 2\", \"status\": \"Entregue\" }]"
                }
              }
            }
          }
        }
      },
      "/cargas/{id}/status": {
        "put": {
          "summary": "Atualizar o status da carga",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "description": "ID da carga a ser atualizada",
              "required": true,
              "schema": {
                "type": "integer"
              }
            }
          ],
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "description": "Novo status da carga"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                  "example": "{ \"message\": \"Status da carga atualizado com sucesso!\" }"
                }
              }
            },
            "500": {
              "description": "Erro interno do servidor",
              "content": {
                "application/json": {
                  "example": "{ \"error\": \"Erro interno do servidor\" }"
                }
              }
            }
          }
        }
      },
      "/cargas/adicionar": {
        "post": {
          "summary": "Adicionar uma nova carga",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "nome": {
                      "type": "string",
                      "description": "Nome da carga"
                    },
                    "peso": {
                      "type": "number",
                      "description": "Peso da carga"
                    },
                    "valor": {
                      "type": "number",
                      "description": "Valor da carga"
                    },
                    "distancia": {
                      "type": "number",
                      "description": "Distância da carga"
                    },
                    "descricao": {
                      "type": "string",
                      "description": "Descrição da carga"
                    },
                    "status": {
                      "type": "string",
                      "description": "Status da carga (opcional, padrão: Pendente)"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Carga inserida com sucesso!",
              "content": {
                "application/json": {
                  "example": "{ \"message\": \"Carga inserida com sucesso!\" }"
                }
              }
            },
            "500": {
              "description": "Erro interno do servidor",
              "content": {
                "application/json": {
                  "example": "{ \"error\": \"Erro interno do servidor\" }"
                }
              }
            }
          }
        }
      },
      "/cargas/{id}": {
        "delete": {
          "summary": "Excluir uma carga",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "description": "ID da carga a ser excluída",
              "required": true,
              "schema": {
                "type": "integer"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                  "example": "{ \"message\": \"Carga excluída com sucesso\" }"
                }
              }
            },
            "500": {
              "description": "Erro interno do servidor",
              "content": {
                "application/json": {
                  "example": "{ \"error\": \"Erro interno do servidor\" }"
                }
              }
            }
          }
        }
      },
      "/login": {
        "post": {
          "summary": "Autenticar usuário",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "cpf": {
                      "type": "string",
                      "description": "CPF do usuário"
                    },
                    "senha": {
                      "type": "string",
                      "description": "Senha do usuário"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                  "example": "{ \"userType\": \"superuser\" }"
                }
              }
            },
            "401": {
              "description": "Não autorizado",
              "content": {
                "application/json": {
                  "example": "{ \"error\": \"CPF ou senha incorretos\" }"
                }
              }
            },
            "500": {
              "description": "Erro interno do servidor",
              "content": {
                "application/json": {
                  "example": "{ \"error\": \"Erro interno do servidor\" }"
                }
              }
            }
          }
        }
      },
      "/registro": {
        "post": {
          "summary": "Registrar um novo usuário",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "NomeCompleto": {
                      "type": "string",
                      "description": "Nome completo do usuário"
                    },
                    "Email": {
                      "type": "string",
                      "description": "E-mail do usuário"
                    },
                    "CPF": {
                      "type": "string",
                      "description": "CPF do usuário"
                    },
                    "DataNascimento": {
                      "type": "string",
                      "description": "Data de nascimento do usuário (formato: yyyy-MM-dd)"
                    },
                    "NumeroCNH": {
                      "type": "string",
                      "description": "Número da CNH do usuário"
                    },
                    "LocalExpedicaoCNH": {
                      "type": "string",
                      "description": "Local de expedição da CNH do usuário"
                    },
                    "Endereco": {
                      "type": "string",
                      "description": "Endereço do usuário"
                    },
                    "Complemento": {
                      "type": "string",
                      "description": "Complemento do endereço do usuário"
                    },
                    "CEP": {
                      "type": "string",
                      "description": "CEP do endereço do usuário"
                    },
                    "Genero": {
                      "type": "string",
                      "description": "Gênero do usuário"
                    },
                    "TipoVeiculo": {
                      "type": "string",
                      "description": "Tipo de veículo do usuário"
                    },
                    "PlacaVeiculo": {
                      "type": "string",
                      "description": "Placa do veículo do usuário"
                    },
                    "MarcaVeiculo": {
                      "type": "string",
                      "description": "Marca do veículo do usuário"
                    },
                    "ModeloVeiculo": {
                      "type": "string",
                      "description": "Modelo do veículo do usuário"
                    },
                    "AnoVeiculo": {
                      "type": "string",
                      "description": "Ano do veículo do usuário"
                    },
                    "Senha": {
                      "type": "string",
                      "description": "Senha do usuário"
                    },
                    "confSENHA": {
                      "type": "string",
                      "description": "Confirmação da senha do usuário"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Usuário inserido com sucesso!",
              "content": {
                "application/json": {
                  "example": "{ \"message\": \"Usuário inserido com sucesso!\", \"redirectTo\": \"/login\" }"
                }
              }
            },
            "400": {
              "description": "Solicitação inválida",
              "content": {
                "application/json": {
                  "example": "{ \"error\": \"Há campos vagos.\" }"
                }
              }
            },
            "500": {
              "description": "Erro interno do servidor",
              "content": {
                "application/json": {
                  "example": "{ \"error\": \"Erro interno do servidor\" }"
                }
              }
            }
          }
        }
      }
    }
  }
  